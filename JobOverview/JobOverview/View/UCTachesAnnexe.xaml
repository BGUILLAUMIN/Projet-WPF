<UserControl x:Class="JobOverview.View.UCTachesAnnexe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobOverview.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">

    <DockPanel Background="White">

        <!--#region Expander Ajout de Taches Annexe-->
        <Expander ExpandDirection="Left" MaxWidth="150" DockPanel.Dock="Right">
            <Expander.ToolTip>
                <ToolTip>
                    <TextBlock>Déplier fiche de détails.</TextBlock>
                </ToolTip>
            </Expander.ToolTip>
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Button Style="{StaticResource ButtonStyle}">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock>Ajouter une tâche annexe.</TextBlock>
                            </ToolTip>
                        </Button.ToolTip>
                        <fa:IconBlock Icon="PlusCircle"/>
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock>Supprimer tâche.</TextBlock>
                            </ToolTip>
                        </Button.ToolTip>
                        <fa:IconBlock Icon="Times"/>
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock>Annuler.</TextBlock>
                            </ToolTip>
                        </Button.ToolTip>
                        <fa:IconBlock Icon="Undo"/>
                    </Button>
                    <Button Style="{StaticResource ButtonStyle}">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock>Enregistrer.</TextBlock>
                            </ToolTip>
                        </Button.ToolTip>
                        <fa:IconBlock Icon="FloppyO"/>
                    </Button>
                </StackPanel>
                <Separator Height="10" Opacity="0" DockPanel.Dock="Top"/>

                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

                    <ComboBox Grid.Row="0">
                        <ComboBox.ToolTip>
                            <ToolTip>
                                <TextBlock>Liste des personnes.</TextBlock>
                            </ToolTip>
                        </ComboBox.ToolTip>
                    </ComboBox>

                    <ComboBox Grid.Row="2">
                        <ComboBox.ToolTip>
                            <ToolTip>
                                <TextBlock>Liste des activités.</TextBlock>
                            </ToolTip>
                        </ComboBox.ToolTip>
                    </ComboBox>

                                     
                    <TextBlock Text="Libellé : " Grid.Row="3"/>
                    <TextBlock Text="Libellé activité" Grid.Row="4"/>
                    <TextBlock Text="Date Travail " Grid.Row="5"/>
                    <TextBlock Text="Heures" Grid.Row="6"/>
                    <TextBlock Text="Description" Grid.Row="7"/>

                </Grid>

                <TextBox TextWrapping="Wrap"/>
            </DockPanel>
        </Expander>
        <!--#endregion-->

        <!--#region DockPanel Consultation des Taches Annexe-->
        <DockPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right">
                <TextBlock Text="Filtre : " VerticalAlignment="Center"/>
                <ComboBox Margin="5" Style="{StaticResource ComboBoxStyle}">
                    <ComboBox.ToolTip>
                        <ToolTip>
                            <TextBlock>Choisir les options de filtrage.</TextBlock>
                        </ToolTip>
                    </ComboBox.ToolTip>
                    <ComboBoxItem Content="Personne"/>
                    <ComboBoxItem Content="Activité"/>
                </ComboBox>
            </StackPanel>
           
            <ListView Margin="10"/>


        </DockPanel>
        <!--#endregion-->

    </DockPanel>

</UserControl>
